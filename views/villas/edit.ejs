<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= villa.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/villas/<%= villa._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="villa[name]" value="<%= villa.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="villa[price]" value="villa.price" min="0" step="1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="villa[image]" value="<%= villa.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="villa[description]" value="<%= villa.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= villa.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/villas">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>