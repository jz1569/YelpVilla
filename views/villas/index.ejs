<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpVilla!</h1>
            <p>View our hand-picked villas from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/villas/new">Add New Villa</a>
            </p>
        </div>
    </header>
    
    
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% villas.forEach(function(villa){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= villa.image %>">
                   <div class="caption">
                       <h4><%= villa.name %></h4>
                   </div>
                   <p>
                       <a href="/villas/<%= villa._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>


<% include ../partials/footer %>